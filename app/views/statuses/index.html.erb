<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<%= link_to 'Post a New Status', new_status_path, class:"btn btn-success" %>

<% @statuses.each do |status| %>

<div class="status">
  <strong class="label label-primary"></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to "Show", status %> |
    <%= link_to time_ago_in_words(status.created_at) +  " ago", status %>
    <span class="admin">
      <span class="label label-warning"><%= link_to "Edit", edit_status_path(status) %></span> <span class="divider">|</span>
      <span class="label label-danger"><%= link_to "Delete", status, method: :delete, data:{ confirm: "Are you sure you want to delete this status."} %></span>
    </span>
  </div>
</div>

<% end %>
